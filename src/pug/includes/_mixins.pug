mixin head(page, chemin)
    head
        meta(charset="utf-8")
        meta(name="author" content="Stéphanie Cloutier")
        meta(name="description" content="Imagine Dragons website for a school project")
        meta(name="keywords" content="design, web, school, project, artist, Imagine Dragons, music, band")

        title Imagine Dragons | #{page}
        link(rel="stylesheet", href= chemin+"assets/css/main.css")

mixin footer(page)
    footer(title="Footer")
        +mainNav(page, "Footer")
        small &copy;&nbsp;Stéphanie Cloutier
        small Privacy Policy
        small Terms &amp; Conditions

mixin mainNav(page, location)
    nav(title= location+" Navigation")
        h2 #{location} Nav
        ul
            if page == "Home"
                li
                    a(href="#" title="home") Home
                li
                    a(href="pages/medias.html" title="medias") Medias
                li
                    a(href="pages/music.html" title="music") Music
                li
                    a(href="pages/shows.html" title="shows") Shows
                li
                    a(href="pages/news.html" title="news") News

            else if page == "Medias"
                li
                    a(href="../index.html" title="home") Home
                li
                    a(href="#" title="medias") Medias
                li
                    a(href="music.html" title="music") Music
                li
                    a(href="shows.html" title="shows") Shows
                li
                    a(href="news.html" title="news") News

            else if page == "Music"
                li
                    a(href="../index.html" title="home") Home
                li
