mixin head(page, chemin)
    head
        meta(charset="utf-8")
        meta(name="author" content="Stéphanie Cloutier")
        meta(name="description" content="Imagine Dragons website for a school project")
        meta(name="keywords" content="design, web, school, project, artist, Imagine Dragons, music, band")

        title Imagine Dragons | #{page}
        link(rel="stylesheet", href= chemin+"assets/css/main.css")
        +svgDefs
            
mixin header(page, location)    
    if page == "Home"
        header(class="header header--home")
            h1.header__title
                a(href="#" class="header__logo-link")
                    | Imagine Dragons
                    +logo("header__img")
            +mainNav(page, location)
    else
        header(class="header")        
            h1.header__title
                a(href="../index.html" class="header__logo-link")
                    | Imagine Dragons
                    +logo("header__img")
            +mainNav(page, location)
                    

mixin footer(page)
    footer(title="Footer" class="footer")
        div.footer__wrapper
            +socialNav("footer")
                                    
            div.footer__small-wrapper
                small(class="footer__small footer__small--copy") &copy;&nbsp;Stéphanie Cloutier
                
                a(href="mailto:stephecloutier@gmail.com" title="Send me an email" class="footer__link footer__link--mail")
                        | Contact webmaster
                        
mixin socialNav(location)
    nav(title="Social Medias" class=location+"-social__nav")
        h3 Social Medias
        ul(class=location+"-social__list")
            li(class=location+"-social__li")
                a(href="https://www.facebook.com/ImagineDragons/" title="Visit our Facebook Page" class=location+"-social__link")
                    +facebook-icon(location+"-social__icon")
                    
            li(class=location+"-social__li")
                a(href="https://www.youtube.com/user/ImagineDragons" title="Visit our Youtube Channel" class=location+"-social__link")
                    +youtube-icon(location+"-social__icon")
                    
            li(class=location+"-social__li")
                a(href="https://twitter.com/Imaginedragons" title="Visit our Twitter" class=location+"-social__link")
                    +twitter-icon(location+"-social__icon")
            li(class=location+"-social__li")
                a(href="https://www.instagram.com/imaginedragons/" title="Visit our Instagram" class=location+"-social__link")
                    +instagram-icon(location+"-social__icon")


mixin mainNav(page, location)
    nav(title= location+" Navigation" class= location+"__nav")
        h2 #{location} navigation
        ul(class= location+"__list")
            if page == "Home"
                li(class= location+"__li")
                    a(href="pages/medias.html" title="medias" class= location+"__link") Medias
                li(class= location+"__li")
                    a(href="pages/music.html" title="music" class= location+"__link") Music
                li(class= location+"__li")
                    a(href="pages/shows.html" title="shows" class= location+"__link") Shows
                li(class= location+"__li")
                    a(href="pages/news.html" title="news" class= location+"__link") News

            else if page == "Medias"
                li(class= location+"__li")
                    a(href="#" title="medias" class= location+"__link") Medias
                li(class= location+"__li")
                    a(href="music.html" title="music" class= location+"__link") Music
                li(class= location+"__li")
                    a(href="shows.html" title="shows" class= location+"__link") Shows
                li(class= location+"__li")
                    a(href="news.html" title="news" class= location+"__link") News

            else if page == "Music"
                li(class= location+"__li")
                    a(href="medias.html" title="medias" class= location+"__link") Medias
                li(class= location+"__li")
                    a(href="#" title="music" class= location+"__link") Music
                li(class= location+"__li")
                    a(href="shows.html" title="shows" class= location+"__link") Shows
                li(class= location+"__li")
                    a(href="news.html" title="news" class= location+"__link "+location+"__link--last") News

            else if page == "Shows"
                li(class= location+"__li")
                    a(href="medias.html" title="medias" class= location+"__link") Medias
                li(class= location+"__li")
                    a(href="music.html" title="music" class= location+"__link") Music
                li(class= location+"__li")
                    a(href="#" title="shows" class= location+"__link") Shows
                li(class= location+"__li")
                    a(href="news.html" title="news" class= location+"__link") News

            else if page == "News"
                li(class= location+"__li")
                    a(href="medias.html" title="medias" class= location+"__link") Medias
                li(class= location+"__li")
                    a(href="music.html" title="music" class= location+"__link") Music
                li(class= location+"__li")
                    a(href="shows.html" title="shows" class= location+"__link") Shows
                li(class= location+"__li")
                    a(href="#" title="news" class= location+"__link") News
                    
mixin svgDefs
    svg.svgDef
        defs
            linearGradient(id="grad1" x1="0%" y1="0%" x2="100%" y2="100%" class="svgGradient")
              stop(offset="0%" class="svgGradient--stop1")
              stop(offset="100%" class="svgGradient--stop2")
                        
            filter(id="dropshadow" height="130%" class="svgShadow")
                feOffset(dx="0" dy="2" result="offOut" in="SourceAlpha")
                feGaussianBlur(result="blurOut" in="offOut" stdDeviation="4")
                feComponentTransfer
                    feFuncA(type="linear" slope="0.5")
                feMerge
                    feMergeNode
                    feMergeNode(in="SourceGraphic")
                  
              

